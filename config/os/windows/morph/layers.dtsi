// tap:      escape      
// long-tap: to BAS layer
// shift:    caps lock
mp_wk_bas: morph_windows_key_bas_layer {
    compatible = "zmk,behavior-mod-morph";
    #binding-cells = <0>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
    bindings = <&to_wBAS_kp 0 ESC>, <&cw_wCAPS>;
};

// tap:      right arrow       
// long-tap: to DEV momentary
// shift:    to DEV layer
