    compatible = "zmk,behavior-mod-morph";
    #binding-cells = <0>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
    bindings = <&mo_mDEV_to_wBAS_kp 0 RIGHT>, <&to_wDEV>;
};

