// tap:      escape      
// long-tap: to BAS layer
// shift:    caps lock
mp_mk_dev: morph_mac_key_bas_layer {
    compatible = "zmk,behavior-mod-morph";
    #binding-cells = <0>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
    bindings = <&to_mBAS_kp 0 ESC>, <&cw_mCAPS>;
};

// tap:      right arrow       
// long-tap: to DEV momentary
// shift:    to DEV layer
mp_mk_dev_right: morph_mac_key_dev_right_layer {
    compatible = "zmk,behavior-mod-morph";
    #binding-cells = <0>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
    bindings = <&mo_mDEV_to_mBAS_kp 0 RIGHT>, <&to_mDEV>;
};

